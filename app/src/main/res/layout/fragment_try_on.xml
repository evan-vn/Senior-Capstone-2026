<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collectionsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/linght_pink">
    <!-- Start Camera-Try On Section-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayoutTryOn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/middleLayoutTryOn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintVertical_weight="30">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:backgroundTint="@color/light_purple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/camera_tryon"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start camera to see nail polish color on your hand"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Or browse and select colors below"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/startTryOnBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Camera"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:gravity="center"

                android:drawableLeft="@drawable/camera"
                />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- End Try On Section-->

    <!-- Start Picking color-Try On Section-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middleLayoutTryOn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topLayoutTryOn"
        app:layout_constraintBottom_toTopOf="@id/bottomLayouTryOn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="40"
        android:layout_margin="8dp"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Your Color"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"/>
                <!--Start recycler scrollable colors-->
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:padding="8dp">
                    <!--Colors displayed here -->



                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Start tips -Try On Section-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomLayouTryOn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/middleLayoutTryOn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="27"
        android:layout_margin="8dp"
       >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How does it work?"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How does it work?"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How does it work?"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How does it work?"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How does it work?"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_purple"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tips: You can browse and select colors without using camera
                        The camera feature is optional for a more immersive try-on experience."
                        android:textSize="11sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="4dp"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- End tips-Try On Section-->
</androidx.constraintlayout.widget.ConstraintLayout>