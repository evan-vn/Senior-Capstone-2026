<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/salonRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingBottom="90dp"
        android:background="@color/linght_pink">

        <!-- TOP: CAMERA TRY-ON SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRUSTED NAIL SALON NEAR YOU"
            android:textSize="30sp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find the perfect salon for nail care needs"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:startIconDrawable="@drawable/search_icon"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="1dp"
            app:startIconTint="@null"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchLocationInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Search salons, service, or location" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/salonCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 salons found"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/useMyLocationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use My Location"
                android:drawableLeft="@drawable/current_location"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/salonCount"
                app:layout_constraintBottom_toBottomOf="@id/salonCount"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--Display all nail salon searched here-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/salonRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>





    </LinearLayout>
</ScrollView>