<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collectionsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!-- header of seasonal-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayoutcollection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/middle1Layoutcollection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/light_purple"
        app:layout_constraintVertical_weight="11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp">


        <TextView

            android:id="@+id/seasonalTxt"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seasonal Collections"
            android:textAlignment="center"
            android:textSize="32sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Curated color palettes for every season and style"
            android:textAlignment="center"
            />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- End header of seasonal-->
    <!-- Middle 1 of seasonal-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle1Layoutcollection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topLayoutcollection"
        app:layout_constraintBottom_toTopOf="@id/middle2Layoutcollection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="15"
        android:background="@color/light_purple">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="5"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:useDefaultMargins="true">
            <!--Cardview for Spring -->

            <androidx.cardview.widget.CardView
                android:id="@+id/springCardView"
                android:layout_width="70dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/spring" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spring"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--Cardview for Summer -->
            <androidx.cardview.widget.CardView
                android:id="@+id/summerCardView"
                android:layout_width="70dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/summer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summer"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!--Cardview for Autumn -->
            <androidx.cardview.widget.CardView
                android:id="@+id/autumnCardView"
                android:layout_width="70dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/autumn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autumn"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!--Cardview for Winter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/winterCardView"
                android:layout_width="70dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/winter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winter"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!--Cardview for Trending -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tredingCardView"
                android:layout_width="70dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/trending" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Treding"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Middle 1 of seasonal section-->

    <!--Start middle2 seasonal section-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle2Layoutcollection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/middle1Layoutcollection"
        app:layout_constraintBottom_toTopOf="@id/bottomLayoutcollection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="52"
        android:background="@color/light_purple">
        <!--CardView to displays seasons and trending colors  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/trending"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/seasonNameLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Treding"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/describeSeasonLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hello"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>

                </LinearLayout>
                <!--End Header to displays seasons and trending name with icon  -->
                <!--Start recycler scrollable colors-->
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:padding="8dp">
                    <!--Colors displayed here -->




                </androidx.recyclerview.widget.RecyclerView>

                <!--End recycler scrollable colors-->



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--End CardView to displays seasons and trending colors  -->



    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--End middle2 seasonal section-->

    <!--Start bottom seasonal section-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomLayoutcollection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/middle2Layoutcollection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="14"
        android:background="@color/light_purple"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/trending"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Styling Tips"

                android:textSize="15sp"/>
        </LinearLayout>


            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="- These versatile shades work year-round."
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="- Perfect for minimalist and modern aesthetics"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="- Ideal for professional and casual settings"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
